<%= form_with(model: @character, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.hidden_field :actors_id, value: @actor.id %>

  <div class="form-group">
    <%= f.label :movies_id %>

    <%= f.collection_select :movies_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create character", class: "btn btn-block btn-outline-secondary" %>
<% end %>
