<% was_validated = actor.errors.any? %>

<%= form_with(model: actor, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% act_name_class = "form-control" %>
    <% act_name_was_invalid = actor.errors.include?(:act_name) %>

    <% if was_validated %>
      <% if act_name_was_invalid %>
        <% act_name_class << " is-invalid" %>
      <% else %>
        <% act_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :act_name %>
    <%= f.text_field :act_name, class: act_name_class, placeholder: "Enter act name" %>
    <% if act_name_was_invalid %>
      <% actor.errors.full_messages_for(:act_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% act_dob_class = "form-control" %>
    <% act_dob_was_invalid = actor.errors.include?(:act_dob) %>

    <% if was_validated %>
      <% if act_dob_was_invalid %>
        <% act_dob_class << " is-invalid" %>
      <% else %>
        <% act_dob_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :act_dob %>
    <%= f.date_select :act_dob, class: act_dob_class, placeholder: "Enter act dob" %>
    <% if act_dob_was_invalid %>
      <% actor.errors.full_messages_for(:act_dob).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% act_bio_class = "form-control" %>
    <% act_bio_was_invalid = actor.errors.include?(:act_bio) %>

    <% if was_validated %>
      <% if act_bio_was_invalid %>
        <% act_bio_class << " is-invalid" %>
      <% else %>
        <% act_bio_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :act_bio %>
    <%= f.text_area :act_bio, class: act_bio_class, placeholder: "Enter act bio" %>
    <% if act_bio_was_invalid %>
      <% actor.errors.full_messages_for(:act_bio).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% act_image_class = "form-control" %>
    <% act_image_was_invalid = actor.errors.include?(:act_image) %>

    <% if was_validated %>
      <% if act_image_was_invalid %>
        <% act_image_class << " is-invalid" %>
      <% else %>
        <% act_image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :act_image %>
    <%= f.file_field :act_image, class: "form-control" %>
    <% if act_image_was_invalid %>
      <% actor.errors.full_messages_for(:act_image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
