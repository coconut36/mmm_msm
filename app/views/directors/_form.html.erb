<% was_validated = director.errors.any? %>

<%= form_with(model: director, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% dir_name_class = "form-control" %>
    <% dir_name_was_invalid = director.errors.include?(:dir_name) %>

    <% if was_validated %>
      <% if dir_name_was_invalid %>
        <% dir_name_class << " is-invalid" %>
      <% else %>
        <% dir_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dir_name %>
    <%= f.text_field :dir_name, class: dir_name_class, placeholder: "Enter dir name" %>
    <% if dir_name_was_invalid %>
      <% director.errors.full_messages_for(:dir_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dir_dob_class = "form-control" %>
    <% dir_dob_was_invalid = director.errors.include?(:dir_dob) %>

    <% if was_validated %>
      <% if dir_dob_was_invalid %>
        <% dir_dob_class << " is-invalid" %>
      <% else %>
        <% dir_dob_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dir_dob %>
    <%= f.date_select :dir_dob, class: dir_dob_class, placeholder: "Enter dir dob" %>
    <% if dir_dob_was_invalid %>
      <% director.errors.full_messages_for(:dir_dob).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dir_bio_class = "form-control" %>
    <% dir_bio_was_invalid = director.errors.include?(:dir_bio) %>

    <% if was_validated %>
      <% if dir_bio_was_invalid %>
        <% dir_bio_class << " is-invalid" %>
      <% else %>
        <% dir_bio_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dir_bio %>
    <%= f.text_area :dir_bio, class: dir_bio_class, placeholder: "Enter dir bio" %>
    <% if dir_bio_was_invalid %>
      <% director.errors.full_messages_for(:dir_bio).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dir_image_class = "form-control" %>
    <% dir_image_was_invalid = director.errors.include?(:dir_image) %>

    <% if was_validated %>
      <% if dir_image_was_invalid %>
        <% dir_image_class << " is-invalid" %>
      <% else %>
        <% dir_image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dir_image %>
    <%= f.file_field :dir_image, class: "form-control" %>
    <% if dir_image_was_invalid %>
      <% director.errors.full_messages_for(:dir_image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
