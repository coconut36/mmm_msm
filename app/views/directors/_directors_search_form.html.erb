<%= search_form_for @q, :class => collapse_search_form, :id => "directors_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :dir_name_cont, "Dir name contains" %>
    <%= f.text_field :dir_name_cont, :class => "form-control", :placeholder => "Dir name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :dir_bio_cont, "Dir bio contains" %>
    <%= f.text_field :dir_bio_cont, :class => "form-control", :placeholder => "Dir bio contains" %>
  </div>

  <div class="form-group">
    <%= f.label :dir_dob, "Dir dob" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='dir_dobgteqPicker' data-target-input="nearest">
          <%= f.text_field :dir_dob_gteq, :class => "form-control datetimepicker-input", :placeholder => "Dir dob greater than or equal to", :data => {:target => '#dir_dobgteqPicker'} %>
          <div class="input-group-append" data-target='#dir_dobgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='dir_doblteqPicker' data-target-input="nearest">
          <%= f.text_field :dir_dob_lteq, :class => "form-control datetimepicker-input", :placeholder => "Dir dob less than or equal to", :data => {:target => '#dir_doblteqPicker'} %>
          <div class="input-group-append" data-target='#dir_doblteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#dir_dobgteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#dir_doblteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#dir_dobgteqPicker').on("dp.change", function (e) {
              $('#dir_doblteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#dir_doblteqPicker').on("dp.change", function (e) {
              $('#dir_dobgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :movies_title_cont, "Movies title contains" %>
    <%= f.text_field :movies_title_cont, :class => "form-control", :placeholder => "Movies title contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/directors" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

